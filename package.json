{
  "name": "test-split-go",
  "version": "2.0.0",
  "private": "true",
  "description": "Github action that lists a subset of tests suitable for passing into go test -run",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/action.ts -o dist --license licenses.txt",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "test": "jest",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashicorp-forge/go-test-split-action.git"
  },
  "author": {
    "name": "Brandon Croft",
    "email": "brandon.croft@gmail.com"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "fast-xml-parser": "^4.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "@vercel/ncc": "^0.38.2",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
